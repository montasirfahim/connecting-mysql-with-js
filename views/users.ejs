<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Users</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <main class="container">
    <div class="card">
      <h1 class="title">Registered Users</h1>
      <div class="actions-row">
        <a class="btn link" href="/">Register new user</a>
      </div>
      <div class="table-wrap">
        <table class="users-table">
          <thead>
            <tr><th>ID</th><th>Name</th><th>Email</th><th>Created</th></tr>
          </thead>
          <tbody>
            <% if (users && users.length) { %>
              <% users.forEach(u => { %>
                <tr>
                  <td><%= u.id %></td>
                  <td><%= u.name %></td>
                  <td><%= u.email %></td>
                  <td><%= u.created_at %></td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr><td colspan="4">No users yet</td></tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</body>
</html>
